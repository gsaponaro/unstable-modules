<application>
    <name>Gesture Recognition</name>
    
    <dependencies>
    <port>/OpenNI2/userSkeleton:o</port>
    </dependencies>
    
    <module>
        <name>gestureModule</name>
        <node>enigma</node>
        <tag>gest</tag>
    </module>
    <module>
        <name>yarpview</name>
        <node>enigma</node>
        <parameters>--name /gesture/rgbViewer --x 0 --y 0 --p 33</parameters>
    </module>
    <module>
        <name>yarpview</name>
        <node>enigma</node>
        <parameters>--name /gesture/depthViewer --x 385 --y 0 --p 33</parameters>
    </module>
    
    <connection>
        <from>/OpenNI2/userSkeleton:o</from>
        <to>/gesture/skel:i</to>
    </connection>
    <connection>
        <from>/OpenNI2/imageFrame:o</from>
        <to>/gesture/rgbViewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/OpenNI2/depthFrame:o</from>
        <to>/gesture/depthViewer</to>
        <protocol>udp</protocol>
    </connection>

</application>
